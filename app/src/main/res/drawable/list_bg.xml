                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#716ABF" />

            <corners android:radius="20dp" />
        </shape>
    </item>


    <!-- Background -->
    <item>
        <shape>

            <gradient android:angle="90"
                android:startColor="@color/firstColor"
                android:centerColor="#000000"

                android:endColor="@color/firstColor"

                />

            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>