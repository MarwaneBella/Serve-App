<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Drop Shadow Stack -->

    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="@color/secondColor" />

            <corners android:radius="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

            <solid android:color="@color/shineColor" />

            <corners android:radius="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="@color/secondColor" />

            <corners android:radius="20dp" />
        </shape>
    </item>


    <!-- Background -->
    <item>
        <shape>

            <gradient
                android:startColor="@color/firstColor"
                android:centerColor="#0E0D0D"
                android:endColor="@color/firstColor"

                android:angle="110" />

            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>