<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddServiceFragment"
    >

        <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="40sp"
                android:textStyle="bold|italic"
                android:textColor="@color/firstColor"
                android:text="Post service" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:hint="@string/select"
                android:textColorHint="@color/shineColor"

                app:endIconTint="@color/shineColor"
                app:startIconTint="@color/shineColor"
                android:background="@drawable/select_bg"
                app:hintTextAppearance="@style/TextLabel"
                app:boxBackgroundColor="@color/firstColor"
                android:padding="2dp"


                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                >

                <AutoCompleteTextView
                    android:id="@+id/auto_complete_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondColor"
                    android:textSize="20sp"
                    android:paddingTop="35dp"
                    android:paddingLeft="20dp"

                    android:inputType="none"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tilService"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic__title"
                app:endIconTint="@color/shineColor"
                app:startIconTint="@color/shineColor"
                android:background="@drawable/select_bg"
                app:hintTextAppearance="@style/TextLabel"
                app:boxBackgroundColor="@color/firstColor"
                android:textColorHint="@color/white"
                android:paddingHorizontal="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="2dp"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Title of service"


                >

                <EditText
                    android:id="@+id/etTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textColor="@color/secondColor"
                    android:textColorHint="@color/white"
                    android:textSize="20sp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tilLocation"
                app:endIconMode="clear_text"
                app:endIconTint="@color/shineColor"
                app:startIconTint="@color/shineColor"
                android:background="@drawable/select_bg"
                app:hintTextAppearance="@style/TextLabel"
                app:boxBackgroundColor="@color/firstColor"

                android:paddingHorizontal="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="2dp"

                android:textColorHint="@color/white"
                app:startIconDrawable="@drawable/ic_location"
                android:hint="Location"



                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <EditText
                    android:id="@+id/etLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textColor="#C6C6C6"

                    android:textColorHint="@color/white"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tilPhone"
                app:prefixText="+212"
                app:prefixTextAppearance="@style/prefix"
                app:prefixTextColor="#C6C6C6"
                app:counterEnabled="true"
                app:counterMaxLength="9"
                app:counterTextColor="@color/shineColor"
                app:endIconTint="@color/shineColor"
                app:startIconTint="@color/shineColor"
                android:background="@drawable/select_bg"
                app:hintTextAppearance="@style/TextLabel"
                app:boxBackgroundColor="@color/firstColor"


                android:paddingHorizontal="5dp"
                android:paddingTop="2dp"
                android:textColorHint="@color/white"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_phone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"

                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etPhone"
                     android:hint="Phone Number"
                    android:textSize="20sp"
                    android:textColor="#C6C6C6"
                    android:maxLength="9"
                    android:imeOptions="actionNext"
                    android:inputType="number"

                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tilPrice"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:suffixText="DH"
                app:suffixTextColor="@color/shineColor"
                app:startIconDrawable="@drawable/ic__money"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:counterTextColor="@color/shineColor"
                app:endIconTint="@color/shineColor"
                app:startIconTint="@color/shineColor"
                android:background="@drawable/select_bg"
                app:hintTextAppearance="@style/TextLabel"
                app:boxBackgroundColor="@color/firstColor"
                android:paddingHorizontal="5dp"
                android:paddingTop="2dp"
                android:textColorHint="@color/white"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etPrice"
                    android:hint="Price"
                    android:textSize="20sp"
                    android:textColor="#C6C6C6"
                    android:maxLength="10"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"

                    />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tilDesc"
                app:counterEnabled="true"
                app:counterMaxLength="650"
                app:endIconMode="clear_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:counterTextColor="@color/shineColor"
                app:endIconTint="@color/shineColor"
                app:startIconTint="@color/shineColor"
                android:background="@drawable/select_bg"
                app:hintTextAppearance="@style/TextLabel"
                app:boxBackgroundColor="@color/firstColor"
                android:paddingHorizontal="5dp"
                android:paddingTop="2dp"
                android:textColorHint="@color/white"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etDesc"
                    android:hint="Description"
                    android:textSize="20sp"
                    android:textColor="#C6C6C6"
                    android:imeOptions="actionNext"
                    android:lines="20"
                    android:gravity="top"
                    android:maxLength="650"
                    android:inputType="textMultiLine"

                    />
            </com.google.android.material.textfield.TextInputLayout>

            <android.widget.Button
                android:id="@+id/post"
                android:layout_width="161dp"
                android:layout_height="75dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="200dp"
                android:textSize="25sp"
                android:text="Post"
                android:background="@drawable/serbg_selector2"
                android:textColor="@color/white"/>

        </LinearLayout>


    </ScrollView>


</FrameLayout>

